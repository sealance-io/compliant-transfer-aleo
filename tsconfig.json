{
  "compilerOptions": {
    "lib": ["esnext"],
    "module": "NodeNext",
    "moduleResolution": "Node",
    "target": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*",
    "scripts/**/*",
    "test/**/*",
    "*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}